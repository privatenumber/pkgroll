{
	"name": "pkgroll",
	"version": "0.0.0-semantic-release",
	"description": "Zero-config rollup bundler",
	"keywords": [
		"zero config",
		"rollup",
		"package.json",
		"exports",
		"esm",
		"cjs",
		"commonjs",
		"typescript",
		"declaration"
	],
	"license": "MIT",
	"repository": "privatenumber/pkgroll",
	"funding": "https://github.com/privatenumber/pkgroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"bin": "./dist/cli.js",
	"scripts": {
		"Target is 12.20 for import(), node: prefix is not used": "",
		"build": "tsx src/cli.ts --minify --target node12.20",
		"postbuild": "npm test",
		"test": "tsx tests/index.ts",
		"lint": "eslint --cache .",
		"prepublishOnly": "npm run build",
		"prepack": "clean-pkg-json"
	},
	"imports": {
		"typescript": "./src/local-typescript-loader.ts"
	},
	"peerDependencies": {
		"typescript": "^4.1"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"@rollup/plugin-alias": "^3.1.9",
		"@rollup/plugin-commonjs": "^22.0.0",
		"@rollup/plugin-inject": "^4.0.4",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-replace": "^4.0.0",
		"@rollup/pluginutils": "^4.2.1",
		"esbuild": "^0.14.39",
		"magic-string": "^0.26.2",
		"rollup": "^2.73.0"
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.22.0",
		"@types/node": "^17.0.34",
		"@types/rimraf": "^3.0.2",
		"clean-pkg-json": "^1.0.0",
		"cleye": "^1.2.0",
		"eslint": "^8.15.0",
		"execa": "^6.1.0",
		"fs-fixture": "^1.0.0",
		"get-node": "^12.1.0",
		"get-tsconfig": "^3.0.1",
		"kolorist": "^1.5.1",
		"manten": "^0.0.3",
		"rimraf": "^3.0.2",
		"rollup-plugin-dts": "^4.2.1",
		"tsx": "^3.3.1",
		"type-fest": "^2.12.2",
		"typescript": "^4.6.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"ignorePatterns": [
			"tests/fixture-package"
		],
		"rules": {
			"@typescript-eslint/no-shadow": [
				"error",
				{
					"allow": [
						"describe",
						"test"
					]
				}
			]
		}
	}
}
